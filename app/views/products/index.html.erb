<h1>Products#index</h1>
<div class="container">
  <div class="d-flex flex-row justify-content-center">
    <div class="col-md-10">
      <% @products.each do |product| %>
        <div >
          <div class="card">
            <div class="card-header">
              <% if product.image.attached? %>
                <%= link_to image_tag(product.image, style:"width:200px"), products_path %>
              <% end %>
            </div>
            <div class="card-body">
              <p><%= product.name %></p>
              <p><%= product.description %></p>
              <p><%= product.price %></p>
              <div class="actions">
                <%= link_to "View", product_path(product.id), class:"btn btn-primary" %>
                <% if current_user.admin %>
                  <%= link_to "Edit", edit_product_path(product), class:"btn btn-secondary" %>
                  <%= link_to "Delete", product_path(product.id), method: :delete, class:"btn btn-danger", data: {confirm:"You sure?"} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class = "col-md-2">
      <ul class="list-group">
        <% @categories.each do |category| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to category.name, products_path(:cate => category.id) %>
            <span class="badge bg-primary rounded-pill"><%= category.products.count %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= link_to "Create Product", new_product_path, class:"btn btn-primary mt-5" %>

