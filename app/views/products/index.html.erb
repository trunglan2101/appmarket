<div class="container">
  <h1>Products</h1>
  <div class="row">
    <%# <div class="col-md-9"><%= render "products/search_form" %> 
    <div class="ml-md-auto"><%= link_to "Create Product", new_product_path, class:"btn btn-primary" %></div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-3 col-sm-6 col-xs-12 mt-3">
              <div class="card">
                <div class="card-body text-center">
                  <%= link_to image_tag(product.image, style:"width:200px"), product %>
                  <p><%= product.name %></p>
                  <p><%= product.description.truncate_words(25) %></p>
                  <p><%= product.price %></p>
                  <div class="actions">
                    <%= link_to "View", product_path(product.id), class:"btn btn-primary" %>
                    <% if current_user.admin %>
                      <%= link_to "Edit", edit_product_path(product), class:"btn btn-secondary" %>
                      <%= link_to "Delete", product_path(product.id), method: :delete, class:"btn btn-danger", data: {confirm:"You sure?"} %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        
      </div>
    </div>
    <div class="col-md-2">
      <div>
        <ul class="list-group">
          <% @categories.each do |category| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to category.name, products_path(:cate => category.id) %>
              <span class="badge bg-primary rounded-pill">
                <%= category.products.count %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <%# <div class = "col-md-2">
      <ul class="list-group">
        <% @categories.each do |category| %>
          <%# <li class="list-group-item d-flex justify-content-between align-items-center"> %>
            <%# <%= link_to category.name, products_path(:cate => category.id %>
            <%# <span class="badge bg-primary rounded-pill"><%= category.products.count</span> %>
          <%# </li> %>
        <%# <% end %>
      <%# </ul> %>
    <%# </div> %>
  </div>
  <div class="mt-3">
    <%= paginate @products %>
  </div>
</div>
