<div class="container">
  <div class="row">
    <%= form_for @category do |f| %>
      <div class="form_group">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit class:"btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>