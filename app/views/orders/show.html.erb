<div class="container">
  <h1>Đơn hàng</h1>
  Tên: <%= @order.name %> |
  Địa chỉ: <%= @order.address %> |
  Điện thoại: <%= @order.phone %> |
  Ghi chú: <%= @order.note %>
  
  <h2>Thông tin đơn hàng</h2>
  <div class="container">
    <table class="table">
      <thead>
        <th>Tên sản phẩm</th>
        <th>Giá</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
      </thead>
      <tbody>
        <% @order.order_items.each do |o| %>
        <tr>
          <td><%= o.product_name %></td>
          <td><%= o.product_price %></td>
          <td><%= o.quantity %></td>
          <td><%= o.total %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-right">Tổng tiền: <b><%= @order.total_price %></div></b>
  </div>
</div>


